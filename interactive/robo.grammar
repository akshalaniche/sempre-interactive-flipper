  (@op (var n1) (var n2)))) (anchored true))
)

(rule $Number ($TOKEN) (NumberFn) (anchored true))
(rule $Number ({ $Numbers }) (IdentityFn) (anchored true))
(rule $Numbers ( $Number ) (IdentityFn) (anchored true))
